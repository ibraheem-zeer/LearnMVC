@model List<Employee>
@{
    ViewData["Title"] = "Index";
}


<a href="/Employees/Create" class="btn btn-outline-success">New</a>
<h1>All Employees</h1>
<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Email</td>
            <td>Password</td>
            <td>Action</td>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Password</td>
                <td>
                    <a class="btn btn-danger" asp-controller="Employees" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    <a class="btn btn-outline-info" asp-controller="Employees" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
